<?xml version="1.0"?>

<layout>
    <!-- SLIDER SLIDES -->
    <adminhtml_brand_brand_index>
        <reference name="content">
            <block type="esgi_brand/adminhtml_brand" name="esgi_brand_adminhtml_brand"></block>
        </reference>
    </adminhtml_brand_brand_index>

    <adminhtml_brand_brand_edit>
        <reference name="content">
            <block type="esgi_brand/adminhtml_brand_edit" name="esgi_brand_adminhtml_brand_edit"></block>
        </reference>
        <reference name="left">
            <block type="esgi_brand/adminhtml_brand_edit_tabs" name="esgi_brand_adminhtml_brand_edit_tabs">
                <block type="esgi_brand/adminhtml_brand_edit_tab_form" name="esgi_brand_adminhtml_brand_edit_tab_form" />
                <action method="addTab">
                    <name>main_section</name>
                    <block>esgi_brand_adminhtml_brand_edit_tab_form</block>
                </action>

                <block type="esgi_brand/adminhtml_brand_edit_tab_product" name="esgi_brand_adminhtml_brand_edit_tab_product" />
                <action method="addTab">
                    <name>product_section</name>
                    <block>esgi_brand_adminhtml_brand_edit_tab_product</block>
                </action>

            </block>
        </reference>
    </adminhtml_brand_brand_edit>
</layout>
